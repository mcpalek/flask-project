pipeline {
  agent any
     environment {
        AWS_REGION  = 'eu-central-1'
        GITCOMMIT="${env.GIT_COMMIT}"


    }


stages {

    stage('docker build and push to ecr') {
      
      steps {

       sh(label: 'ECR login and docker push', script:
         '''
         #!/bin/bash
         
           echo "Authenticate with ECR"
            set +x # Don't echo credentials from the login command!
            echo "Building New ECR Image"
            eval $(aws ecr get-login --region "$AWS_REGION" --no-include-email)
            # Enable Debug and Exit immediately 
            set -xe
            docker build  -t 643162619216.dkr.ecr.eu-central-1.amazonaws.com/flask/myapp .
            #two push one for master tag other is git commit ID
            docker push 643162619216.dkr.ecr.eu-central-1.amazonaws.com/flask/myapp:latest
            docker tag 643162619216.dkr.ecr.eu-central-1.amazonaws.com/flask/myapp:latest
            docker push 643162619216.dkr.ecr.eu-central-1.amazonaws.com/flask/myapp:latest
         '''.stripIndent())


      }
    }
}
}